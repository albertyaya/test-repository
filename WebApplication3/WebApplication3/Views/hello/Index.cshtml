@model IEnumerable<WebApplication3.Models.FileName>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>有名的夜市</title>
</head>

<body>
    <h1>有名的夜市</h1>
    <table class="table">
        <tr align="center" bgcolor="#a6b141">
            <th>編號</th>
            <th>名稱</th>
            <th>地址</th>
            <th></th>
        </tr>
        @{ 
            int i= 0;
            string imgname, colorstyle;

            foreach(var item in Model)
            {
                imgname = item.id + ".jpg";
                if (i % 2 == 0)
                { colorstyle = "aliceblue"; }
                else { colorstyle = "#edf8cf"; }
                i++;
                <tr align="center" bgcolor="@colorstyle">
                    <td>@item.id</td>
                    <td>@Html.DisplayFor(modelitem => item.name) <br /> <img src="~/Images/@imgname" width="150"  /></td>
                    <td>@Html.DisplayFor(modelitem => item.address)</td>
                    <td><a href="https://www.google.com.tw/maps/place/@item.address" target="_blank"></a>規劃路線</td>
                </tr>
            }
        }}
    </table>
</body>
</html>
